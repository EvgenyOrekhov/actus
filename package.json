{
  "name": "actus",
  "version": "0.0.0-alpha.5",
  "description": "Minimalist state container",
  "keywords": [
    "state",
    "state container",
    "state manager",
    "state management",
    "redux",
    "functional",
    "immutable"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/EvgenyOrekhov/actus.git"
  },
  "license": "MIT",
  "author": "Evgeny Orekhov",
  "files": [
    "index.js",
    "src/init.js",
    "commonjs/"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "build": "babel index.js --out-dir commonjs/ && babel src/ --out-dir commonjs/src/ --ignore src/**/*.test.js",
    "ci": "npm run lint && npm test",
    "lint": "run-p --aggregate-output lint:**",
    "lint:js": "eslint . --ext .js,.json",
    "lint:prettier": "prettier --check *.{js,css,json,md,html,yml,yaml}",
    "test": "jest",
    "preversion": "npm run build && git add commonjs/",
    "postversion": "git push && git push --tags && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run ci"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,html,yml,yaml}": "prettier --write",
    "*.{js,json}": "eslint --fix --ext .js,.json"
  },
  "jest": {
    "collectCoverage": true
  },
  "dependencies": {
    "core-js": "^3.6.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "babel-jest": "^25.1.0",
    "eslint": "^6.8.0",
    "eslint-config-hardcore": "^9.0.0",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "prettier-plugin-packagejson": "^2.0.10"
  },
  "engines": {
    "node": ">=10.17.0"
  }
}
