{
  "name": "actus",
  "version": "0.0.0-alpha.2",
  "description": "",
  "license": "MIT",
  "author": "Evgeny Orekhov",
  "files": [
    "index.js",
    "src/init.js",
    "commonjs/"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "scripts": {
    "ci": "npm run lint && npm test",
    "lint": "run-p --aggregate-output lint:**",
    "lint:js": "eslint . --ext .js,.json",
    "lint:prettier": "prettier --check *.{js,css,json,md,html,yml,yaml}",
    "test": "jest",
    "build": "babel index.js --out-dir commonjs/ && babel src/ --out-dir commonjs/src/ --ignore 'src/**/*.test.js'",
    "preversion": "npm run build && git add commonjs/",
    "postversion": "git push && git push --tags && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run ci"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,html,yml,yaml}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,json}": [
      "eslint --fix --ext .js,.json",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true
  },
  "devDependencies": {
    "@babel/cli": "^7.8.0",
    "@babel/core": "^7.8.0",
    "@babel/preset-env": "^7.8.0",
    "babel-jest": "^24.9.0",
    "eslint": "^6.8.0",
    "eslint-config-hardcore": "^8.1.0",
    "eslint-config-prettier": "^6.9.0",
    "husky": "^4.0.7",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "prettier-plugin-packagejson": "^2.0.9"
  },
  "engines": {
    "node": ">=13.2.0"
  }
}
