{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "babel packages/actus/index.js --out-dir packages/actus/commonjs/ && babel packages/actus/src/ --out-dir packages/actus/commonjs/src/ --ignore **/*.test.js && babel packages/actus-logger/makeLogger.js packages/actus-logger/index.js --out-dir packages/actus-logger/commonjs/ && cp README.md packages/actus/",
    "ci": "npm run lint && npm test",
    "lint": "run-p --aggregate-output lint:**",
    "lint:js": "eslint . --ext .js,.json",
    "lint:prettier": "prettier --check **/*.{js,css,json,md,html,yml,yaml}",
    "prepare": "lerna bootstrap",
    "release": "lerna publish",
    "test": "jest",
    "preversion": "npm run build && git add packages/actus/commonjs/ packages/actus-logger/commonjs/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run ci"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,html,yml,yaml}": "prettier --write",
    "*.{js,json}": "eslint --fix --ext .js,.json"
  },
  "jest": {
    "collectCoverage": true
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "babel-jest": "^25.1.0",
    "eslint": "^6.8.0",
    "eslint-config-hardcore": "^9.0.0",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "prettier-plugin-packagejson": "^2.0.10"
  }
}
