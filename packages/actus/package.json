{
  "name": "actus",
  "version": "0.0.0-alpha.6",
  "description": "Minimalist state container",
  "keywords": [
    "state",
    "state container",
    "state manager",
    "state management",
    "redux",
    "functional",
    "immutable"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/EvgenyOrekhov/actus.git"
  },
  "license": "MIT",
  "author": "Evgeny Orekhov",
  "files": [
    "index.js",
    "src/init.js",
    "commonjs/"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "build": "babel index.js --out-dir commonjs/ && babel src/ --out-dir commonjs/src/ --ignore src/**/*.test.js && babel packages/actus-logger/index.js --out-dir packages/actus-logger/commonjs/",
    "ci": "npm run lint && npm test",
    "lint": "run-p --aggregate-output lint:**",
    "lint:js": "eslint . --ext .js,.json",
    "lint:prettier": "prettier --check **/*.{js,css,json,md,html,yml,yaml}",
    "test": "jest",
    "preversion": "npm run build && git add commonjs/",
    "postversion": "git push && git push --tags && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run ci"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,html,yml,yaml}": "prettier --write",
    "*.{js,json}": "eslint --fix --ext .js,.json"
  },
  "jest": {
    "collectCoverage": true
  },
  "dependencies": {
    "core-js": "^3.6.4"
  },
  "engines": {
    "node": ">=10.17.0"
  }
}
