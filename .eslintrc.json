{
  "extends": [
    "hardcore",
    "hardcore/fp",
    "hardcore/node",
    "prettier",
    "prettier/unicorn",
    "plugin:jest/all",
    "plugin:jest-formatting/strict"
  ],

  "parserOptions": {
    "sourceType": "module"
  },

  "rules": {
    "import/no-unused-modules": [
      "error",
      {
        "missingExports": false,
        "unusedExports": true,
        "ignoreExports": ["**/__mocks__/**"]
      }
    ],

    "no-inline-comments": "off",
    "line-comment-position": "off",
    "node/no-unsupported-features/es-syntax": "off",
    "fp/no-throw": "off",

    "jest/require-top-level-describe": "off",
    "jest/prefer-expect-assertions": "off",
    "jest/no-try-expect": "off"
  },

  "overrides": [
    {
      "files": ["*.test.*"],

      "env": {
        "jest": true,
        "node": true
      },

      "rules": {
        "no-magic-numbers": "off"
      }
    },

    {
      "files": ["packages/actus-redux-devtools/index.js"],

      "rules": {
        "no-underscore-dangle": [
          "error",
          {
            "enforceInMethodNames": true,
            "allow": ["__REDUX_DEVTOOLS_EXTENSION__"]
          }
        ]
      }
    }
  ],

  "ignorePatterns": [
    "commonjs/",

    "packages/ember-actus/config/ember-try.js",
    "packages/ember-actus/config/environment.js",
    "packages/ember-actus/ember-cli-build.js",
    "packages/ember-actus/testem.js",
    "packages/ember-actus/tests/dummy/app/app.js",
    "packages/ember-actus/tests/dummy/app/router.js",
    "packages/ember-actus/tests/dummy/config/environment.js",
    "packages/ember-actus/tests/dummy/config/targets.js",
    "packages/ember-actus/tests/test-helper.js"
  ]
}
